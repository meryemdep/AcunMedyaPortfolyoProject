@model List<AcunMedyaPortfolyoProject.Models.Projectpart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projects</h2>
<div class="container">
    <table class="table table-hover table-bordered align-middle shadow rounded">
        <thead class="table-dark text-center">
            <tr>
                <th>Project ID</th>
                <th>Project Name</th>
                <th>Description</th>
                <th>Project Link</th>
                <th>Image 1</th>
                <th>Image 2</th>
                <th>Image 3</th>
                <th>Category</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectID</td>
                    <td class="fw-bold">@item.ProjectName</td>
                    <td class="text-start">@item.Description</td>
                    <td>
                        <a href="@item.ProjectLink" target="_blank" class="btn btn-info btn-sm rounded-pill">
                            🔗 View Project
                        </a>
                    </td>
                    <td><img src="@item.Image1" class="img-thumbnail" width="80"></td>
                    <td><img src="@item.Image2" class="img-thumbnail" width="80"></td>
                    <td><img src="@item.Image3" class="img-thumbnail" width="80"></td>
                    <td><span class="badge bg-primary">@item.CategoryID</span></td>
                    <td>
                        <a href="#" class="btn text-white btn-sm rounded-pill px-3"
                           style="background-color: #8B0000;">
                            🔄 Update
                        </a>
                    </td>
                    <td>
                        <a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-dark btn-sm rounded-pill px-3">
                            🗑️ Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Project/CreateProject/" class="btn text-white shadow mt-3"
       style="background-color: #800020; border-radius: 25px; padding: 10px 20px; font-weight: bold;">
        ➕ Add New Project
    </a>

</div>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolyo Kartları - Bootstrap</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
        }
        .card {
            position: relative;
            background-color: #800020; /* Bordo renk */
            color: #fff;
            border: 2px solid #600018; /* Daha koyu bordo çerçeve */
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding-top: 50px; /* Çizgi ve noktalar için yer */
            width: 250px; /* Kart genişliği artırıldı (200px -> 250px) */
            height: 200px; /* Kart yüksekliği eklendi */
        }
        .card::before {
            content: '● ● ●'; /* MacOS pencere düğmeleri */
            position: absolute;
            top: 15px; /* Noktalar biraz aşağı kaydırıldı */
            left: 15px;
            color: #fff;
            font-size: 12px; /* Noktalar biraz büyütüldü */
            letter-spacing: 4px;
        }
        .card::after {
            content: '';
            position: absolute;
            top: 35px; /* Çizgi, noktaların altına göre ayarlandı */
            left: 0;
            width: 100%;
            height: 2px; /* Kalın çizgi */
            background-color: #600018; /* Daha koyu bordo çizgi */
        }
        .card-title {
            font-size: 20px; /* Başlık boyutu artırıldı (16px -> 20px) */
            font-weight: 500;
            margin-bottom: 10px;
        }
        .card-text {
            font-size: 30px; /* Sayı boyutu artırıldı (24px -> 30px) */
            font-weight: bold;
        }
        .card:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row g-4 justify-content-center">
            <!-- Kategoriler Kartı -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Kategoriler</h3>
                        <p class="card-text">@ViewBag.CategoryCount</p>
                    </div>
                </div>
            </div>

            <!-- Mesajlar Kartı -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Mesajlar</h3>
                        <p class="card-text">@ViewBag.MessagesCount</p>
                    </div>
                </div>
            </div>

            <!-- Projeler Kartı -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Projeler</h3>
                        <p class="card-text">@ViewBag.ProjectCount</p>
                    </div>
                </div>
            </div>

            <!-- Yetenekler Kartı -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Yetenekler</h3>
                        <p class="card-text">@ViewBag.SkillsCount</p>
                    </div>
                </div>
            </div>

            <!-- Referanslar Kartı -->
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Referanslar</h3>
                        <p class="card-text">@ViewBag.ReferencesCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
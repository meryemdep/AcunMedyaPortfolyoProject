
@{
    ViewBag.Title = "CreateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Creating Services</h2>
<form method="post" enctype="multipart/form-data" class="p-4 shadow rounded-3 bg-white">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="Title" placeholder="Enter service title">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input class="form-control" name="Description" rows="3" placeholder="Enter service description">
    </div>
    <div class="mb-3">
        <label for="description2" class="form-label">Additional Description</label>
        <input class="form-control" name="Description2" rows="3" placeholder="Enter additional details">
    </div>
    <div class="mb-3">
        <label for="iconUrl" class="form-label">Service Icon</label>
        <input type="file" class="form-control" name="IconUrl">
    </div>
    <button type="submit" class="btn btn-primary w-100">💾 Save Service</button>
</form>



@model List<AcunMedyaPortfolyoProject.Models.ServicesPart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Services</h2>
<div class="container">
    <table class="table table-bordered table-dark">
        <thead>
            <tr class="text-center">
                <th>Services ID</th>
                <th>Description</th>
                <th>Title</th>
                <th>Icon</th>
                <th>Description 2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.ServicesID</td>
                    <td class="text-start">@item.Description</td>
                    <td class="fw-bold">@item.Title</td>
                    <td>
                        <img src="@item.IconUrl" class="img-thumbnail bg-light" width="50" alt="Service Icon">
                    </td>
                    <td class="text-start">@item.Description2</td>
                    <td>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-pill px-3 py-1">
                            🔄 Güncelle
                        </a>
                        <a href="/Services/DeleteServices/@item.ServicesID" class="btn btn-outline-danger btn-sm rounded-pill px-3 py-1">
                            🗑️ Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Services/CreateServices/" class="btn text-white shadow-sm mt-3"
       style="background-color: #800020; border-radius: 25px; padding: 10px 20px; font-weight: bold;">
        ➕ Add
    </a>

</div>


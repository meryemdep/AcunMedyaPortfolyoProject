@model AcunMedyaPortfolyoProject.Models.ServicesPart
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateServices</h2>

<form method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="Age" class="form-label">Description</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Enter description" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="ImageUrl" class="form-label">title</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Enter title" })
        </div>


        <div class="col-md-6 mb-3">
            <label for="Degree" class="form-label">ıcon url</label>
            @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control", placeholder = "ıconurl" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="Age" class="form-label">Description2</label>
            @Html.TextBoxFor(x => x.Description2, new { @class = "form-control", placeholder = "Enter description" })
        </div>
        @Html.HiddenFor(x => x.ServicesID)

        <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Update</button>
        </div>
    </div>
</form>

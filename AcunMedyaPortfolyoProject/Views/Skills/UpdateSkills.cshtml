@model AcunMedyaPortfolyoProject.Models.Skills
@{
    ViewBag.Title = "UpdateSkills";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateSkills</h2>
<form method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="ImageUrl" class="form-label">Skill's Name</label>
            @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control", placeholder = "Enter skill name" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="Degree" class="form-label">Percentage</label>
            @Html.TextBoxFor(x => x.Percentage, new { @class = "form-control", placeholder = "Percentage" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="Age" class="form-label">Description</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Enter description" })
        </div>

        @Html.HiddenFor(x => x.SkillID)

        <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Update</button>
        </div>
    </div>
</form>



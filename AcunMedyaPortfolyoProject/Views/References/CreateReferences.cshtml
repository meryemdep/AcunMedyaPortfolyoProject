
@{
    ViewBag.Title = "CreateReferences";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Creating References</h2>
<form method="post" enctype="multipart/form-data" class="p-4 shadow rounded-3 bg-white">
    <div class="mb-3">
        <label for="referenceName" class="form-label">Reference Name</label>
        <input type="text" class="form-control" name="ReferenceName"  placeholder="Enter reference name">
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="Title" placeholder="Enter title">
    </div>
    <div class="mb-3">
        <label for="description1" class="form-label">Description 1</label>
        <input class="form-control" name="Description1" rows="3" placeholder="Enter description">
    </div>
    <div class="mb-3">
        <label for="description2" class="form-label">Description 2</label>
        <input class="form-control" name="Description2" rows="3" placeholder="Enter additional description">
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Reference Image</label>
        <input type="text" class="form-control" name="ImageUrl">
    </div>
    <button type="submit" class="btn btn-primary w-100">Save Reference</button>
</form>



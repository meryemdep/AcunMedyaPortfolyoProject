@model AcunMedyaPortfolyoProject.Models.Contacts
@{
    ViewBag.Title = "UpdateContacts";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateContacts</h2>
<form method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="Age" class="form-label">Age</label>
            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", placeholder = "Enter your adress" })
       </div>
        <div class="col-md-6 mb-3">
            <label for="Email" class="form-label">Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "you@example.com" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="Phone" class="form-label">Phone</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "+90..." })
        </div>
        <div class="col-md-12 mb-3">
            <label for="Decription1" class="form-label">Description 1</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Short description..." })
        </div>


        @Html.HiddenFor(x => x.ContactID)

        <div class="col-12">
            <button type="submit" class="btn btn-primary w-100">Update</button>
        </div>
    </div>
</form>

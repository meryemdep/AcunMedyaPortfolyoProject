@model List<AcunMedyaPortfolyoProject.Models.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Messages</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>MessageID</th>
                <th>NameSurname</th>
                <th>Mail</th>
                <th>Subject</th>
                <th>MessageContent</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Mail</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageContent</td>
                    <td><a href="#" class="btn btn-danger">Güncelle</a></td>
                    <td><a href="#" class="btn btn-dark">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

